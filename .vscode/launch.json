    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {"PYDEVD_WARN_SLOW_RESOLVE_TIMEOUT": "20", 
            "CUDA_VISIBLE_DEVICES": "5"},
            "cwd": "${fileDirname}",
            "args": ["facebook/opt-125m", "c4", 
                    "--wbits", "4"]
        }
    ]
}